@model DelegationBook.Models.Car

@{
    ViewData["Title"] = "Edycja";
}

<h2>Edycja</h2>

<h4>Samochód</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CarId" />
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistrationNumber" class="control-label"></label>
                <input asp-for="RegistrationNumber" class="form-control" />
                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MeterStatus" class="control-label"></label>
                <input asp-for="MeterStatus" class="form-control" />
                <span asp-validation-for="MeterStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainDriver" class="control-label"></label>
                <select asp-for="MainDriver.EmployeeId" asp-items="@ViewBag.Drivers" class="form-control">
                    <option value=""></option>
                </select>
                <span asp-validation-for="MainDriver.EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.CarId">Anuluj</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
