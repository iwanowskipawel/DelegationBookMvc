@model DelegationBook.Models.KilometersCard

@{
    ViewData["Title"] = "Szczegóły";
}

<h2>Szczegóły</h2>

<div>
    <h4>Karta kilometrów</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CardSymbol)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CardSymbol)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkCardNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkCardNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Model) - @Html.DisplayFor(model => model.Car.RegistrationNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalDistance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalDistance)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CardId">Edytuj</a> |
    <a asp-action="Delete" asp-route-id="@Model.CardId">Usuń</a> |
    <a asp-action="Index">Przejdź do listy kart kilometrowych</a>
</div>

<br />
<h5>Wyjazdy w ramach karty</h5>
@await Html.PartialAsync("../Shared/_ListTripsPartial.cshtml", Model.Trips)
