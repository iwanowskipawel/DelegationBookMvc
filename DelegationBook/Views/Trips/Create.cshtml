@model DelegationBook.Models.ViewModels.TripViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Trip</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Trip.DepartureDate" class="control-label"></label>
                <input asp-for="Trip.DepartureDate" class="form-control" />
                <span asp-validation-for="Trip.DepartureDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trip.ArrivalDate" class="control-label"></label>
                <input asp-for="Trip.ArrivalDate" class="form-control" />
                <span asp-validation-for="Trip.ArrivalDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trip.Destination" class="control-label"></label>
                <input asp-for="Trip.Destination" class="form-control" />
                <span asp-validation-for="Trip.Destination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trip.Keeper" class="control-label"></label>
                <select asp-for="SelectedEmployee" asp-items="Model.Employees" class="form-control">
                    <option value=""></option>
                </select>
                <span asp-validation-for="Trip.Keeper" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trip.InitialMeter" class="control-label"></label>
                <input asp-for="Trip.InitialMeter" class="form-control" />
                <span asp-validation-for="Trip.InitialMeter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trip.FinalMeter" class="control-label"></label>
                <input asp-for="Trip.FinalMeter" class="form-control" />
                <span asp-validation-for="Trip.FinalMeter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
